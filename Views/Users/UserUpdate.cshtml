@model UserUpdateVM

@{
    ViewData["Title"] = "UserUpdate";
}

<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title">@User.Identity.Name</h4>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="Password"> Yeni Şifrə</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Password" type="password" class="form-control form-control-success">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>


            </div>
        </div>
        <div class="text-center">
            <button value="Update" type="submit" class="btn btn-success"><i class="ti-reload"></i>Yenilə</button>
            <a asp-controller="Users" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
        </div>

    </form>
</div>
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>

}
@model AppUser
@{
    ViewData["Title"] = "UserProfile";
}

<div class="container">
    <form  enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title">Istifadəçi məlumatları</h4>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="Name">Adı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control form-control-success">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="Surname">Soyadı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Surname" type="text" class="form-control form-control-success">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="Email">Elektron ünvanı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="text" class="form-control form-control-success">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="UserName">Istifadəçi adı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control form-control-success">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>





            </div>
        </div>
        <div class="text-center">
        
            <a asp-controller="Users" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
        </div>

    </form>
</div>

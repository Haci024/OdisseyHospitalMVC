@model ChangeRoleVM
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="card">
        <h2 class="text-center"></h2>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Rolu dəyiş</label>
                <select class="form-control" name="newRole">
                    <option></option>
                    @foreach (IdentityRole role in ViewBag.Roles)
                    {


                        @if (role.Name == Model.OldRole)
                        {
                            <option selected value="@role">@role</option>
                        }
                        else
                        {
                            <option value="@role.Name">@role.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="ti-reload"></i>Yenilə</button>
                <a asp-controller="Users" asp-action="Index" class="btn btn-success"><i class="ti-back-left"></i>Geri qayıt</a>
            </div>
          
        </form>
    </div>
 
</div>


@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

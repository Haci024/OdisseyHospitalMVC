@model HospitalSliderImage
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="text-center">
        <h1>Hospital Başlıq  şəkili Yarat</h1>
    </div>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group has-success row">
            <div class="col-sm-10">
                <label class="col-form-label" asp-for="@Model.Photo">Başlıq şəkili</label>
             </div>
                <div class="col-sm-10">
                    <input asp-for="@Model.Photo" class="form-control form-control-success">
                    <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                </div>
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-success"><i class="icofont icofont-check-circled"></i>Yarat</button>
                <a asp-controller="HospitalSliderImage" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
            </div>

</form>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
  }

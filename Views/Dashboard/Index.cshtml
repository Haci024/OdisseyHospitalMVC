@model HomeVM
<html>
    <head>
    

    </head>
    <body>
        @if (User.Identity.IsAuthenticated)
        {

        <div class="page-body">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="container">
                                <div class="card">

                                    <div class="card-header">
                                        <a asp-controller="Doctor" asp-action="Create" class="btn btn-success"><i class="ti-user"></i>Həkim əlavə et </a>

                                        <div class="card-header-right">
                                            <ul class="list-unstyled card-option">
                                                <li><i class="fa fa-chevron-left"></i></li>
                                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                                <li><i class="fa fa-minus minimize-card"></i></li>
                                                <li><i class="fa fa-refresh reload-card"></i></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="card-block table-border-style">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>

                                                    <tr>

                                                        <th>Departamentin adı</th>
                                                        <th>Departamentin fotosu</th>
                                                        <th>Həkimlərin sayı</th>
                                                        <th>Fəaliyyətlər</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (Department item in Model.Departments)
                                                    {
                                                        <tr class="table-active">
                                                            <td>@item.DepartmentName</td>

                                                            <td><img src="~/assets/Image/@item.Image" style="width:80px;height:80px;border-radius:50%" /></td>

                                                            <td><h3>@item.Doctor.Count()</h3></td>

                                                            <td>

                                                                <a asp-controller="Department" asp-action="Doctor" asp-route-id="@item.Id" class="btn btn-success"><i class="ti-user"></i>Həkimləri</a>
                                                                <a asp-controller="Department" asp-action="Personal" asp-route-id="@item.Id" class="btn btn-facebook"><i class="ti-user"></i>İşçiləri</a>
                                                                <a asp-controller="Department" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning"><i class="ti-agenda"></i>Haqqında</a>

                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>
            <section>
                <div class="container">
                    <div class="card">
                        <div class="card-header">
                            <a asp-controller="BloodBank" asp-action="Create" class="btn btn-success"><i class="ti-paint-bucket"></i>Qan qrupu əlavə et </a>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li><i class="fa fa-chevron-left"></i></li>
                                    <li><i class="fa fa-window-maximize full-card"></i></li>
                                    <li><i class="fa fa-minus minimize-card"></i></li>
                                    <li><i class="fa fa-refresh reload-card"></i></li>

                                </ul>
                            </div>

                        </div>

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>

                                        <tr>

                                            <th>Qan qrupunun adı</th>
                                            <th>Qan qrupunun  fotosu</th>
                                            <th>Mövcud qan miqdarı</th>

                                            <th>Sataus</th>
                                            <th>Fəaliyyətlər</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (BloodBank item in Model.BloodBanks)
                                        {
                                            <tr class="table-active">
                                                <td>@item.BloodGroup</td>

                                                <td><img src="~/assets/Image/@item.Image" style="width:80px;height:80px;border-radius:50%" /></td>

                                                <td><h3>@item.BloodQuantity Litr</h3></td>

                                                <td>

                                                    @if (item.IsDeactive)
                                                    {
                                                        <span class="text-danger">Deactive</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-success">Active</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.IsDeactive)
                                                    {
                                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-secondary">Activated</a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger"><i class="ti-trash"></i>Sil</a>
                                                    }
                                                  
                                                    <a asp-controller="BloodBank" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning"><i class="ti-agenda"></i>Haqqında</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
        </div>
            
        }
        else
        {
           
            <section class="page_404">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 ">
                            <div class="col-sm-10 col-sm-offset-1  text-center">
                                <div class="four_zero_four_bg">
                                    <h1 class="text-center ">Salam!</h1>


                                </div>

                                <div class="contant_box_404">
                                    <h3 class="h2">
                                        Admin panelə daxil olmaq üçün öz kimliyini təsdiqlə
                                    </h3>



                                    <a asp-controller="Accaunt" asp-action="Login" class="link_404"><i class="ti-key"></i>Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    </body>

</html>



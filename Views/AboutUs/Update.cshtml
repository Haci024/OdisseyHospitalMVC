@model AboutUs
@{
    ViewData["Title"] = "Update";
}

<h1 class="text-center">Bizim haqqımızda</h1>
<div class=" container">
   
   
    <form method="post" enctype="multipart/form-data">


        <div class="form-group has-success row">
            <div class="col-sm-10">
                <label class="col-form-label" asp-for="@Model.Photo">Şəkil</label>
                <span asp-validation-for="@Model.Photo" class="text-danger"></span>
            </div>
            <div class="col-sm-10">
                <input asp-for="@Model.Photo" class="form-control form-control-success">
                <span asp-validation-for="@Model.Photo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group has-success row">
            <div class="col-sm-10">
                <label class="col-form-label" asp-for="@Model.Title">Başlıq</label>
            </div>
            <div class="col-sm-10">
                <textarea asp-for="@Model.Title" class="form-control form-control-success"></textarea>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group has-success row">
            <div class="col-sm-10">
                <label class="col-form-label" asp-for="@Model.Description"> Məzmun</label>
            </div>
            <div class="col-sm-10">
                <textarea asp-for="@Model.Description" class="form-control form-control-success"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="ti-reload"></i>Yenilə</button>
            <a asp-controller="AboutUs" asp-action="Index" class="btn btn-success"><i class="ti-back-left"></i>Geri qayıt</a>
        </div>
       
    </form>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Title'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}

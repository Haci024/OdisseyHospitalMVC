@model Personal
@{
    ViewData["Title"] = "Detail";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title">İşçi haqqında</h4>
                </div>
                <div class="form-group has-success row">
                    <div class="col-6">
                        <img src="~/assets/Image/@Model.Image" style="width:500px;height:500px;border-radius:10%;object-fit:cover" />
                    </div>
                    <div class="col-6">
                        <div class="form-group has-success row">
                            <div class="col-sm-10">
                                <label class="col-form-label" asp-for="@Model.Name">Adı</label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Name" class="form-control form-control-success">
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group has-success row">
                            <div class="col-sm-10">
                                <label class="col-form-label" asp-for="@Model.Surname">Soyadı</label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Surname" type="text" class="form-control form-control-success">
                                <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group has-success row">
                            <div class="col-sm-10">
                                <label class="col-form-label" asp-for="@Model.Age">Yaşı</label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Age" class="form-control form-control-success">
                                <span asp-validation-for="@Model.Age" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group has-success row">
                            <div class="col-sm-10">
                                <label class="col-form-label" asp-for="@Model.Department.DepartmentName">Departamenti</label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Department.DepartmentName" class="form-control form-control-success">
                                <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group has-success row">
                            <div class="col-sm-10">
                                <label class="col-form-label" asp-for="@Model.Salary">Maaş</label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Salary" type="number" class="form-control form-control-success">
                                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group has-success row">
                            <div class="col-sm-10">
                                <label class="col-form-label" asp-for="@Model.Position">Vəzifəsi</label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Position" type="email" class="form-control form-control-success">
                                <span asp-validation-for="@Model.Position" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                </div>


            </div>
            <div class="text-center">

                <a asp-controller="Personal" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
            </div>
        </div>


    </form>
</div><script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

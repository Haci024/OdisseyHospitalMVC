@model Personal
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title">İşçi əlavə et</h4>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-10">
                        <input asp-for="@Model.Name" placeholder="İşçinin adı" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-10">
                        <input asp-for="@Model.Surname" type="text" placeholder="Soyadı" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-10">
                        <input asp-for="@Model.Age" placeholder="Yaşı" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-10 col-form-label"> Departament seçin</label>
                    <div class="col-sm-10">
                        <select name="departmentId" class="form-control">
                            <option></option>
                            @foreach (Department item in ViewBag.Department)
                            {
                                <option selected value="@item.Id">@item.DepartmentName</option>
                            }
                        </select>
                    </div>

                    <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-10">
                        <input asp-for="@Model.Position" placeholder="Vəzifəsi..." class="form-control form-control-success">
                        <span asp-validation-for="@Model.Position" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <label class="col-sm-10"> Foto seçin</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Photo" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group has-success row">

                    <div class="col-sm-10">
                        <input asp-for="@Model.Salary" type="number" placeholder="Maaşı" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                    </div>
                </div>



            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success"><i class="icofont icofont-check-circled"></i>Yarat</button>
            <a asp-controller="Personal" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
        </div>

    </form>
</div>


@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

@model Equipments
@{
    ViewData["Title"] = "Detail";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title"> Alət haqqında</h4>
                </div>
                <div class="form-group has-success row">
                    <div class="col-6">
                        <img src="~/assets/Image/@Model.Images" style="width:500px;height:500px;border-radius:10%;object-fit:cover" />
                    </div>
                    <div class="col-6">
                        <div class="form-group has-success row">

                            <div class="col-sm-12">

                                <input asp-for="@Model.Name" class="form-control form-control-success">


                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group has-success row">

                            <div class="col-sm-12">

                                <input asp-for="@Model.Price" class="form-control form-control-success">


                                <span asp-validation-for="@Model.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group has-success row">

                            <div class="col-sm-12">

                                <textarea asp-for="@Model.Description" class="form-control form-control-success"></textarea>


                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group has-success row">

                            <div class="col-sm-12">

                                <input asp-for="@Model.EquipmentCount" class="form-control form-control-success">


                                <span asp-validation-for="@Model.EquipmentCount" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                </div>


            </div>
            <div class="text-center">

                <a asp-controller="Equipments" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
            </div>
        </div>


    </form>
</div>




@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

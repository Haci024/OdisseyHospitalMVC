@model Illnesses
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title">Məlumatları yenilə</h4>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-2">
                        <label class="col-form-label" asp-for="@Model.Ilness">Xəstəliyin adı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Ilness" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Ilness" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-2">
                        <label class="col-form-label" asp-for="@Model.HealthyMethod">Müalicə methodu</label>
                    </div>
                    <div class="col-sm-10">
                        <textarea asp-for="@Model.HealthyMethod" type="text" class="form-control form-control-success"></textarea>
                        <span asp-validation-for="@Model.HealthyMethod" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Departament seçin</label>
                    <div class="col-sm-10">
                        <select name="departmentId" class="form-control">
                            <option></option>
                            @foreach (Department item in ViewBag.Department)
                            {
                                @if (item.Id==Model.DepartmentId)
                            {
                                <option selected value="@item.Id">@item.DepartmentName</option>
                            }
                            }
                        </select>
                    </div>
                </div>

            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success"><i class="icofont icofont-check-circled"></i>Məlumatı Yenilə</button>
            <a asp-controller="Illnesses" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
        </div>

    </form>
</div>
    <script>
        ClassicEditor
            .create(document.querySelector('#HealthyMethod'))
            .catch(error => {
                console.error(error);
            });
    </script>

@model Illnesses
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title">Xəstəlik haqqında</h4>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="@Model.Ilness">Xəstəliyin adı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Ilness" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Ilness" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="@Model.HealthyMethod">Xəstəliyin müalicə methodu</label>
                    </div>
                    <div class="col-sm-10">
                        <textarea asp-for="@Model.HealthyMethod" type="text" class="form-control form-control-success"></textarea>
                        <span asp-validation-for="@Model.HealthyMethod" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-10">
                        <label class="col-form-label" asp-for="@Model.Department.DepartmentName">Departamentin adı</label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Department.DepartmentName" type="text" class="form-control form-control-success">
                        <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="text-center">

            <a asp-controller="Illnesses" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i> Geri qayıt</a>
        </div>

    </form>
</div>




@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

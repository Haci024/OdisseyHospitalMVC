@model Doctor
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-block">
                <div class="text-center">
                    <h4 class="sub-title"> Yeni Həkim</h4>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Name" class="form-control form-control-success" placeholder="Həkimin adı">


                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Surname" class="form-control form-control-success" placeholder="Həkimin Soyadı">


                        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Age" class="form-control form-control-success" placeholder="Həkimin yaşı">


                        <span asp-validation-for="@Model.Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Education" type="text" class="form-control form-control-success" placeholder="Həkimin Təhsili">


                        <span asp-validation-for="@Model.Education" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Description" class="form-control form-control-success" placeholder="Həkimin haqqinda">


                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Work" class="form-control form-control-success" placeholder="Həkimin İşi">


                        <span asp-validation-for="@Model.Work" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-12">
                        <input asp-for="@Model.WorkNumber" class="form-control form-control-success" placeholder="İş nömrəsi">
                        <span asp-validation-for="@Model.WorkNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">
                    <div class="col-sm-12">
                        <label class="col-form-label" asp-for="@Model.DoctorPhoto">Həkimin şəkili</label>
                    </div>
                    <div class="col-sm-12">
                        <input asp-for="@Model.DoctorPhoto" class="form-control form-control-success">
                        <span asp-validation-for="@Model.DoctorPhoto" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.BloodGroup" class="form-control form-control-success" placeholder="Qan qrupu">


                        <span asp-validation-for="@Model.BloodGroup" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Salary" type="number" class="form-control form-control-success" placeholder="Həkimin maaşı">


                        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Email" type="email" class="form-control form-control-success" placeholder="Elektron ünvanı">


                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success ">
                    <div class="col-sm-6">
                        <label class="col-form-label">Departament seçin</label>
                    </div>
                    <select name="departmentId" class="form-control">

                        @foreach (Department item in ViewBag.Department)
                        {
                            <option selected value="@item.Id">@item.DepartmentName</option>
                        }

                    </select>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.Type" type="text" class="form-control form-control-success" placeholder="Cinsi">


                        <span asp-validation-for="@Model.Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group has-success row">

                    <div class="col-sm-12">

                        <input asp-for="@Model.HomeAdress" type="text" class="form-control form-control-success" placeholder="Ev ünvanı">


                        <span asp-validation-for="@Model.HomeAdress" class="text-danger"></span>
                    </div>
                </div>







            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success"><i class="icofont icofont-check-circled"></i>Həkim əlavə et</button>
            <a asp-controller="Doctor" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
        </div>

    </form>
</div>




@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

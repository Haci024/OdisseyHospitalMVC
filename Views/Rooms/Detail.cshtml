@model Rooms
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Otaq məlumatları </h1>
<div class="container">
    <div class="card">
        <form method="post">
            <div class="form-group has-success row">
                <div class="col-sm-6">
                    <label class="col-form-label" asp-for="@Model.RoomNum">Otaq nömrəsi</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="@Model.RoomNum" class="form-control form-control-success">
                    <span asp-validation-for="@Model.RoomNum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group has-success row">
                <div class="col-sm-6">
                    <label class="col-form-label" asp-for="@Model.Roomtype">Otaq tipi</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="@Model.Roomtype" class="form-control form-control-success">
                    <span asp-validation-for="@Model.Roomtype" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group has-success row">
                <div class="col-sm-6">
                    <label class="col-form-label" asp-for="@Model.RoomCapacity">Otaq tutumu</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="@Model.RoomCapacity" class="form-control form-control-success">
                    <span asp-validation-for="@Model.RoomCapacity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-10 col-form-label"> Departament seçin</label>
                <div class="col-sm-10">
                    <select name="departmentId" class="form-control">
                        <option></option>
                        @foreach (Department item in ViewBag.Department)
                        {
                            @if (item.Id == Model.DepartmentId)
                            {
                                <option selected value="@item.Id">@item.DepartmentName</option>
                            }


                            }
                        </select>
                </div>
            </div>
            <div class="text-center">

                <a asp-controller="Rooms" asp-action="Index" class="btn btn-success"><i class="ti-back-left"></i>Geri qayıt</a>
            </div>

        </form>

    </div>

</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

@model List<HospitalSlider>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="text-center">
        <h1>Başlıq yazıları</h1>
    </div>

    <div class="card">

        <div class="card-header">
            <div class="card-header-right">
                <ul class="list-unstyled card-option">
                    <li><i class="fa fa-chevron-left"></i></li>
                    <li><i class="fa fa-window-maximize full-card"></i></li>
                    <li><i class="fa fa-minus minimize-card"></i></li>
                    <li><i class="fa fa-refresh reload-card"></i></li>

                </ul>
            </div>

        </div>
        <div class="card-block table-border-style">

            <div class="table-responsive">
                <table class="table">

                    <thead>
                        <tr>
                            <th>Şəkil</th>
                            <th>Başlıq</th>
                            <th>Fəaliyyətlər</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (HospitalSlider item in Model)
                        {
                            <tr class="table-active">

                                <td><img src="~/assets/Image/@item.Image" style="width:400px;height:150px;border-radius:10%" /></td>
                                <td>@Html.Raw(item.Title)</td>
                                <td>
                                    <a asp-controller="HospitalSlider" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning"><i class="ti-agenda"></i>Detallar</a>
                                    <a asp-controller="HospitalSlider" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success"><i class="ti-reload"></i>Yenilə</a>

                                </td>

                            </tr>
                        }




                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}

@model OurServices
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="card">
        <div class="text-center">
            <h1> Xidmətlərimiz</h1>
        </div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group has-success row">
               
                <div class="col-sm-10">
                    <input asp-for="@Model.ServiceName" type="text" placeholder="Servis adı" class="form-control form-control-success">
                    <span asp-validation-for="@Model.ServiceName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group has-success row">
               
                <div class="col-sm-10">
                    <textarea asp-for="@Model.Description" type="text" placeholder="Servis servis haqqında məlumat" class="form-control form-control-success"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group has-success row">
                <div class="col-sm-10">
                    <label class="col-form-label" asp-for="@Model.Photo">Servis Şəkili</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="@Model.Photo" class="form-control form-control-success">
                    <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                </div>
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-success"><i class="icofont icofont-check-circled"></i>Servis Yarat</button>
                <a asp-controller="OurServices" asp-action="Index" class="btn btn-primary"><i class="ti-back-left"></i>Geri qayıt</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
}



@model OurServices
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <div class="card">
        <h1 class="text-center"> Servis məlumatlarını yenilə</h1>
        <div class="card-border-danger">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Photo">Servisin Şəkili</label>
                    <input asp-for="@Model.Photo" class="form-control">
                    <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ServiceName">Servisin adı</label>
                    <input asp-for="@Model.ServiceName" class="form-control">
                    <span asp-validation-for="@Model.ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Haqqında</label>
                    <textarea asp-for="@Model.Description" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="ti-reload"></i>Yenilə</button>
                    <a asp-controller="OurServices" asp-action="Index" class="btn btn-success"><i class="ti-back-left"></i>Geri qayıt</a>
                </div>




            </form>

        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}